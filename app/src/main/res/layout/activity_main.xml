<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.app.iot.iot.MainActivity">


    <Button
        android:text="set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set"
        android:background="@drawable/btnbg2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="left"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/left"
        android:background="@drawable/btnbg"
        android:layout_marginTop="10dp"

        android:layout_below="@+id/down"
        android:layout_alignStart="@+id/down" />

    <Button
        android:text="down"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/down"
        android:layout_marginTop="10dp"

        android:background="@drawable/btnbg"

        android:layout_below="@+id/up"
        android:layout_alignStart="@+id/right" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text=""
        android:textColor="#fff"
        android:ems="6"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/up"
        style="@style/Widget.AppCompat.AutoCompleteTextView" />

    <Button
        android:text="up"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/up"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btnbg"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <Button
        android:text="right"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/right"
        android:background="@drawable/btnbg"
        android:layout_marginTop="10dp"

        android:layout_below="@+id/left"
        android:layout_alignStart="@+id/up" />

    <TextView
        android:text=""
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/set"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editText" />

    <Button
        android:text="CLR"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/set"
        android:background="@drawable/btnbg"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/button7" />
</RelativeLayout>
